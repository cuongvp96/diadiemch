<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp"
    android:layout_marginBottom="3dp"
    android:background="?android:attr/selectableItemBackground"
   >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="0dp"
        android:paddingTop="3dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"

        android:background="?android:attr/selectableItemBackground">
        <TextView
            android:id="@+id/tvTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ten"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/tvLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="loai"
            android:textSize="18dp"
            />

        <TextView
            android:text="price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_motagia"
            android:textSize="18dp"
            android:layout_below="@+id/tvTen"/>
        <TextView
            android:text="sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sdt"
            android:textSize="18dp"
            android:layout_below="@+id/tvTen"/>
        <TextView
            android:text="chu ch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_chucuahang"
            android:textSize="18dp"
            android:layout_below="@+id/tvTen"/>
        <TextView
            android:text="diadiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_diadiem"
            android:textSize="18dp"
            android:layout_below="@+id/tv_motagia"/>
    <TextView
        android:text="loaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_latlng"
        android:textSize="18dp"
        android:layout_below="@+id/tv_diadiem"/>
</LinearLayout>

</android.support.v7.widget.CardView>